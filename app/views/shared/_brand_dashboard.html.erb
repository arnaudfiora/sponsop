<div class="dashboard-banner">
  <h1 style="text-transform: uppercase"><%= current_user.company %></h1>
  <h2><%= current_user.first_name %>'s Dashboard</h2>
</div>

<div class="line-separator"><div class="line"></div></div>

<div class="dashboard-title">
  <h2>Current campaigns -<%= link_to "Add one", new_campaign_path, class: "new-campaign-button"%></h2>
</div>

<div class="dashboard-container">

  <% @campaigns.each do |campaign| %>
    <%= link_to campaign_path(campaign), class: 'link-to' do %>
      <div class="campaign-card">
        <h3><%= campaign.name %></h3>
        <p><%= campaign.description %></p>
      </div>
    <% end %>
  <% end %>

</div>

<div class="line-separator">
  <div class="line"></div>
</div>
