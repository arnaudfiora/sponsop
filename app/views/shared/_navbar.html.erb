<div class="navbar navbar-expand-sm navbar-dark navbar-sponsop navbar-sticky">

  <%= link_to root_path do %>
    <%= image_tag "logo-white-name.svg", class: "navbar-logo", style: "background-size: cover" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Messages", messengers_index_path, class: "nav-link mr-2" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link mr-2" %>
        </li>
      <% end %>

      <li class="nav-item dropdown">

        <% if user_signed_in? %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src='<%= current_user.avatar %>' />
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-secondary' %>
          <%= link_to "Log in", new_user_session_path, class: 'btn btn-primary' %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to 'My dashboard', dashboard_path, class: "dropdown-item" %>
            <% if current_user.is_brand %>
              <a href="http://facebook.com" target="_blank" class="dropdown-item">Template contract</a>
            <% end %>
            <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% else %>
            <%= link_to 'Log in', new_user_session_path, class: "dropdown-item" %>
            <%= link_to 'Sign up', new_user_registration_path, class: "dropdown-item" %>
          <% end %>
        </div>

      </li>
    </ul>

  </div>

</div>
