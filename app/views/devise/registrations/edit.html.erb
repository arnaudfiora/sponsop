<div class="channel-form-wrapper">
  <div class="channel-form-content">

<h1>Edit <%= resource_name.to_s.humanize %></h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :description,
                placeholder: "Explain quickly what you do",
                input_html: { style: "resize: none" } %>
    <%= f.input :requests,
                placeholder: "What do you want out of collaboration with brands?",
                input_html: { style: "resize: none" } %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit", class: "btn btn-primary w-100" %>
    <%= link_to "Cancel", dashboard_path, class: "btn btn-danger w-100 my-2" %>
  </div>
<% end %>
</div></div>
